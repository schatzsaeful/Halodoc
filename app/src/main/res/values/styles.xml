<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Typography -->
    <style name="tv_big_header" parent="android:Widget.Material.TextView">
        <item name="android:textColor">@color/color_black_text</item>
        <item name="android:textSize">@dimen/dimens_txt_28sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="tv_medium_header" parent="android:Widget.Material.TextView">
        <item name="android:textColor">@color/color_black_text</item>
        <item name="android:textSize">@dimen/dimens_txt_16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="tv_small_header" parent="android:Widget.Material.TextView">
        <item name="android:textColor">@color/color_black_text</item>
        <item name="android:textSize">@dimen/dimens_txt_14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="tv_regular" parent="android:Widget.Material.TextView">
        <item name="android:textColor">@color/color_black_text</item>
        <item name="android:textSize">@dimen/dimens_txt_12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <!--Text Input Layout-->
    <style name="CommonTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/dimens_4dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimens_4dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimens_4dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimens_4dp</item>
        <item name="boxBackgroundColor">@color/color_white</item>
        <item name="boxStrokeColor">@color/color_white</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="button.primary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/selector_button_text_color_primary</item>
        <item name="elevation">0dp</item>
        <item name="backgroundTint">@color/selector_button_background_color_primary</item>
        <item name="cornerRadius">6dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

</resources>
